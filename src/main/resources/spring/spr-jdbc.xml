<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <!--default-autowire="byName">-->
    <!--<import resource="spring-mybatis.xml"/>-->
    <!--<import resource="spring-remote-client.xml"/>-->
    <!--<context:component-scan base-package="com.win.aop"/>-->
    <!-- 根据 Bean 的名字自动实现代理拦截 -->
<!--配置数据源-->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="org.sqlite.JDBC"/>
        <property name="url" value="jdbc:sqlite:springDB.db"/>
        <!--mysql账号:user/muser;root/mysql-->
        <property name="username" value="root"/>
        <property name="password" value="mysql"/>
        <property name="initialSize" value="1"/>
        <property name="maxActive" value="300"/>
        <property name="maxIdle" value="2"/>
        <property name="minIdle" value="1"/>
    </bean>
    <bean id="userService" class="com.win.jdbc.UserServiceImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>